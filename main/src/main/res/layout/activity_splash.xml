<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="hello main" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
              app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="8dp" android:layout_marginTop="8dp"
              android:id="@+id/tv"/>
    <Button
            android:text="goto news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_news" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="get fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_getFragment" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/bt_news"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
    <Button
            android:text="带参数跳转"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_music"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/bt_getFragment" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>